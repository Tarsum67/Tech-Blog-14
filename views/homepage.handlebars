<div class="row post mt-5 d-flex flex-column-reverse home">
  {{#each publicPosts as |blogPost| }}
   <div class="card p-0 col-12 shadow">
    <div class="card-header px-3 d-flex justify-content-between">
      <a class="none" href="/post/{{blogPost.id}}"><h2 >{{blogPost.title}}</h2></a>
     <p>Posted by {{user.dataValues.username}} on {{blogPost.date_created}}</p>
    </div>
    <div class="card-body" id="{{blogPost.id}}">
      <p class="card-text p-3">{{blogPost.description}}</p>
    </div>
  </div>
  {{/each}}
</div>