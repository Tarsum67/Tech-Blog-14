<div class="home" >
  <div id="user" data-id="{{user_id}}" class="post shadow mb-10">
    <div class="bottom-border ml-3 mr-50 pt-3 d-flex justify-content-between">
      <h2>{{blogPost.title}}</h2>
      <p>Posted by {{user.dataValues.username}} on {{blogPost.date_created}}</p>
    </div>

    <div class="card-body" data-id="{{blogPost.id}}" id="info">
      <p class="card-text px-3 py-2">{{blogPost.description}}</p>
    </div>

    {{#if logged_in}}
    <div class="card-body d-flex flex-column">
      <textarea class="form-control" id="comment" cols="10" rows="3"></textarea>
      <button type="submit" class="btn btn-secondary mt-3" id="submit">Add Comment</button>
    </div>
    {{/if}}
  </div>

  <div class="my-50 w-50 comment">
    <h2 class="text-center mt-2 display-4">Comments</h2>
    <div class="d-flex flex-column-reverse">
      {{#each blogPost.comments as |comment| }}
      <div class="card">
        <div class="card-header d-flex justify-content-between px-3">
          <h3>{{comment.user.username}}</h3>
          <p>{{comment.date_created}}</p>
        </div>
        <p class="card-text p-3">{{comment.text}}</p>
      </div>
      {{/each}}
    </div>
  </div>
</div>
    

<script src="/js/post.js"></script>